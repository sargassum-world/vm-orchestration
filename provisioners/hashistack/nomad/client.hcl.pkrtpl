client {
  enabled = true
  servers = ["127.0.0.1"]

  host_network "public" {
    interface = "ens4" # specific to GCP
  }

  host_network "ztoverlay" {
    interface = "${zerotier_interface}"
  }
}

plugin "docker" {
  config {
    allow_caps = ["sys_admin", "net_admin", "net_bind_service"]

    volumes {
      enabled = true
    }
  }
}
